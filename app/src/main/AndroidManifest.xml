<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ampingat.ampingatapplication" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--
 To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" /> <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_ampingat"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >

        </activity>
        <activity
            android:name=".FirstFloorActivity"
            android:label="@string/title_activity_first_floor"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ampingat.ampingatapplication.MainActivity" />
        </activity>
        <activity
            android:name=".SecondFloorActivity"
            android:label="@string/title_activity_second_floor"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ampingat.ampingatapplication.MainActivity" />
        </activity>
        <activity
            android:name=".ThirdFloorActivity"
            android:label="@string/title_activity_third_floor"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ampingat.ampingatapplication.MainActivity" />
        </activity>
        <activity
            android:name=".FourthFloorActivity"
            android:label="@string/title_activity_fourth_floor"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ampingat.ampingatapplication.MainActivity" />
        </activity>
        <activity
            android:name=".EapFireActivity"
            android:label="@string/title_activity_eap_fire"
            android:parentActivityName=".EapFireActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ampingat.ampingatapplication.MainActivity" />
        </activity>
        <activity
            android:name=".EapEarthquakeActivity"
            android:label="@string/title_activity_eap_earthquake"
            android:parentActivityName=".EapEarthquakeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ampingat.ampingatapplication.MainActivity" />
        </activity>
        <activity
            android:name=".VideoPlayer"
            android:label="Video Player" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="adjustResize|stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ampingat.ampingatapplication.MainActivity" />
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>
