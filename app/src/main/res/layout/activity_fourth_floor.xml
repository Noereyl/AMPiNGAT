<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/roomId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="WHERE ARE YOU NOW?"
        android:textColor="@color/primary_dark"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/directions"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="35dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        />


    <TextView
        android:id="@+id/legendPink"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:text="NEON PINK: Third Route"
        android:textColor="@color/pink"
        android:background="#55000000"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/legendOrange"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/legendPink"
        android:layout_marginLeft="10dp"
        android:text="ORANGE: Second Route"
        android:textColor="@color/orange"
        android:background="#55000000"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/legendGreen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/legendOrange"
        android:layout_marginLeft="10dp"
        android:text="GREEN: Shortest Route"
        android:textColor="@color/green"
        android:background="#55000000"
        android:textSize="14sp"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/legendGreen"
        android:layout_marginLeft="10dp"
        android:text="LEGEND:"
        android:textColor="@color/white"
        android:background="#55000000"
        android:textSize="20sp"
        />
</RelativeLayout>